import java.util.Scanner;

public class AlterandoValorVariavel {
	
	public static void main(String[] args) {
		Scanner leitor = new Scanner (System.in);
		
		System.out.print("Digite o valor do produto: ");
		Double valorProduto = leitor.nextDouble();
		
		System.out.println("Digite o tipo de pagamento [1 = à  vista / 2 = á prazo]: ");
		Integer tipoPagamento = leitor.nextInt();
		
		Boolean pagamentoAVista = tipoPagamento.equals(1);
		
		Double juros = 0.0;
		
		if(pagamentoAVista) {
			
		}else {
			juros = 10.0;/*Na alteração do valor de uma variável não há necessidade de por o tipo
			novamento no momento de sua declaração.
			*/
		}
		
		Double acrescimo = valorProduto * juros / 100;
		
		Double valorTotal = acrescimo + valorProduto;
		
		System.out.println("Valor total: " + valorTotal);
		
		leitor.close();
	}

}
